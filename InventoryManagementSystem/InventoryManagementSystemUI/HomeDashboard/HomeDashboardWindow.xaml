<Window x:Class="InventoryManagementSystemUI.HomeDashboard.HomeDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryManagementSystemUI.HomeDashboard"
        mc:Ignorable="d"
        Title="Dashboard" Height="600" Width="1000" WindowStartupLocation="CenterScreen"
        Background="#E5F7FF">

    <Window.Resources>
        <!-- Navigation Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#00B0FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="BorderBrush" Value="#00B0FF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="230"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="5">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0091EA"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#0288D1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Summary Card Style -->
        <Style x:Key="SummaryCardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="BorderBrush" Value="#2563EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="150"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Sidebar Background Gradient -->
        <LinearGradientBrush x:Key="SidebarBackground" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#0288D1" Offset="0"/>
            <GradientStop Color="#00B0FF" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Grid>
        <!-- Column Definitions: Sidebar (250px) + Main -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Background="{StaticResource SidebarBackground}" Grid.Column="0" VerticalAlignment="Stretch">
            <TextBlock Text="Khata App" Foreground="White" FontSize="24" FontWeight="Bold" Margin="-20,0,0,0" HorizontalAlignment="Center"/>
            <Button Click="Dashboard_Click" Style="{StaticResource NavButtonStyle}" Padding="10,0,0,0">
                <TextBlock Text="Dashboard" Margin="10,0,0,0"/>
            </Button>
            <Button Click="Inventory_Click" Style="{StaticResource NavButtonStyle}" Padding="10,0,0,0">
                <TextBlock Text="Inventory" Margin="10,0,0,0"/>
            </Button>

            <Button Click="Categories_Click" Style="{StaticResource NavButtonStyle}" Padding="10,0,0,0">
                <TextBlock Text="Categories" Margin="10,0,0,0"/>
            </Button>

            <Button Click="Suppliers_Click" Style="{StaticResource NavButtonStyle}" Padding="10,0,0,0">
                <TextBlock Text="Suppliers" Margin="10,0,0,0"/>
            </Button>

            <Button Click="Customers_Click" Style="{StaticResource NavButtonStyle}" Padding="10,0,0,0">
                <TextBlock Text="Customers" Margin="10,0,0,0"/>
            </Button>

            <Button Click="Sales_Click" Style="{StaticResource NavButtonStyle}" Padding="10,0,0,0">
                <TextBlock Text="Sales" Margin="10,0,0,0"/>
            </Button>

            <Button Click="Reports_Click" Style="{StaticResource NavButtonStyle}" Padding="10,0,0,0">
                <TextBlock Text="Reports" Margin="10,0,0,0"/>
            </Button>

            <Button Click="Settings_Click" Style="{StaticResource NavButtonStyle}" Padding="10,0,0,0">
                <TextBlock Text="Settings" Margin="10,0,0,0"/>
            </Button>

            <Button Click="Logout_Click" Style="{StaticResource NavButtonStyle}" Padding="10,0,0,0">
                <TextBlock Text="Logout" Margin="10,0,0,0"/>
            </Button>
        </StackPanel>

        <!-- Main Dashboard Area -->
        <Grid Grid.Column="1" Margin="20">
            <StackPanel>
                <TextBlock Text="Dashboard" FontSize="28" FontWeight="Bold" Margin="0,20" HorizontalAlignment="Left" />

                <UniformGrid Columns="3" Margin="0,0" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                    <Border Background="{StaticResource SidebarBackground}" Style="{StaticResource SummaryCardStyle}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Total Products" Foreground="White" FontSize="16" HorizontalAlignment="Center" Margin="0,10"/>
                            <TextBlock Text="1200" Foreground="White" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10"/>
                        </StackPanel>
                    </Border>
                    <Border Background="{StaticResource SidebarBackground}" Style="{StaticResource SummaryCardStyle}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Low Stock" Foreground="White" FontSize="16" HorizontalAlignment="Center" Margin="0,10"/>
                            <TextBlock Text="24" Foreground="White" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10"/>
                        </StackPanel>
                    </Border>
                    <Border Background="{StaticResource SidebarBackground}" Style="{StaticResource SummaryCardStyle}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Today's Sales" Foreground="White" FontSize="16" HorizontalAlignment="Center" Margin="0,10"/>
                            <TextBlock Text="$3,200" Foreground="White" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- Charts Placeholder -->
                <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Padding="30" Margin="10" Background="#F1F1F1">
                    <TextBlock Text="(Charts go here)" FontStyle="Italic" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
